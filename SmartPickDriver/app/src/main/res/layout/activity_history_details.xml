<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:id="@+id/rlHomeToolbarId"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="@color/colorPrimary">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivbackId"
                android:layout_width="26sp"
                android:layout_height="22sp"
                android:padding="3sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_feather_arrow_left" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/history_details"
                android:visibility="visible"
                android:textColor="@color/coloryellow"
                android:textSize="14sp"
                tools:ignore="RelativeOverlap">

            </androidx.appcompat.widget.AppCompatTextView>




        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:scrollbars="none"
            android:layout_above="@+id/viewpaymentdetailsId"
            android:layout_below="@+id/rlHomeToolbarId"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/tvIdnumberId"
                    android:text="@string/id_number_abc123"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textColor="@color/textblack"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:text="@string/date_02_feb_2020"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textColor="@color/textblack"
                    android:fontFamily="serif"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:id="@+id/text_date_id"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/_15sdp" />



                <androidx.cardview.widget.CardView
                    android:id="@+id/cvpricedetailsId"
                    android:layout_below="@+id/tvIdnumberId"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/coloryellow"
                    app:cardCornerRadius="12sp"
                    app:cardElevation="2sp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/liprofileId"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp">
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:id="@+id/driverProifleId"
                                android:layout_gravity="center"
                                android:src="@drawable/profilea" />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:text="@string/username"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:textColor="@color/textblack"
                                android:fontFamily="serif"
                                android:gravity="left"
                                android:id="@+id/userNameId"
                                android:textSize="12sp"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="serif"
                                    android:gravity="right"
                                    android:padding="5dp"
                                    android:text="@string/price"
                                    android:textColor="@color/textblack"
                                    android:textSize="12sp"
                                    tools:ignore="RtlHardcoded" />


                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="?attr/selectableItemBackground"
                                    android:fontFamily="serif"
                                    android:gravity="center"
                                    android:id="@+id/textpriceId"
                                    android:text="@string/_223"
                                    android:textColor="@color/textblack"
                                    android:textSize="12sp"
                                    tools:ignore="RtlHardcoded" />


                            </LinearLayout>




                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="serif"
                                    android:gravity="right"
                                    android:padding="5dp"
                                    android:text="@string/distance"
                                    android:textColor="@color/textblack"
                                    android:textSize="12sp"
                                    tools:ignore="RtlHardcoded" />


                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="?attr/selectableItemBackground"
                                    android:fontFamily="serif"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:id="@+id/textdistanceId"
                                    android:text="@string/_3_5_k_m"
                                    android:textColor="@color/textblack"
                                    android:textSize="12sp"
                                    tools:ignore="RtlHardcoded" />


                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="serif"
                                    android:gravity="right"
                                    android:padding="5dp"
                                    android:text="@string/user_number"
                                    android:textColor="@color/textblack"
                                    android:textSize="12sp"
                                    tools:ignore="RtlHardcoded" />


                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="?attr/selectableItemBackground"
                                    android:fontFamily="serif"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:id="@+id/userNumberId"
                                    android:text="@string/_3_5_k_m"
                                    android:textColor="@color/textblack"
                                    android:textSize="12sp"
                                    tools:ignore="RtlHardcoded" />


                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>



                </androidx.cardview.widget.CardView>




                <RelativeLayout
                    android:id="@+id/relocaionpickId"
                    android:layout_below="@+id/cvpricedetailsId"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:padding="12.0dip"
                            android:id="@+id/view_pickup"
                            android:focusable="true"
                            android:clickable="true"
                            android:layout_marginLeft="15.0dip"
                            android:layout_marginTop="15.0dip"
                            android:layout_marginRight="15.0dip"
                            style="@style/LView">
                            <TextView
                                android:background="@drawable/shape_start_dot"
                                style="@style/DotMark" />
                            <LinearLayout
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="10.0dip"
                                style="@style/LWView"
                                android:layout_marginLeft="10.0dip">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:textSize="12.0sp"
                                    android:textColor="@color/colorSecondary"
                                    android:layout_width="wrap_content"
                                    android:fontFamily="serif"
                                    android:layout_height="wrap_content"
                                    android:text="@string/txt_pickup_loc" />
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:textSize="13.0sp"
                                    android:textColor="@drawable/selector_loc_txt"
                                    android:ellipsize="end"
                                    android:id="@+id/txt_p_loc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5.0dip"
                                    android:hint="@string/txt_enter_pickup"
                                    android:singleLine="true"
                                    android:fontFamily="serif"/>
                            </LinearLayout>

                        </LinearLayout>
                        <View
                            style="@style/LineView" />
                        <LinearLayout
                            android:padding="12.0dip"
                            android:id="@+id/view_drop"
                            style="@style/LView">
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/listView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <View
                            style="@style/LineView" />

                    </LinearLayout>


                </RelativeLayout>
                <View
                    android:id="@+id/viewtruckId"
                    android:layout_width="match_parent"
                    android:background="@color/ColorGray"
                    android:layout_below="@+id/relocaionpickId"
                    android:layout_height="@dimen/_1sdp" />



                <LinearLayout
                    android:id="@+id/trackdetailsId"
                    android:layout_below="@+id/viewtruckId"
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/trackid"
                        android:layout_width="0sp"
                        android:layout_gravity="center"
                        android:layout_weight="2.5"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:text="@string/selected_truck"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textColor="@color/textblack"
                            android:fontFamily="serif"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"/>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/img_truck"
                            android:layout_width="80.0dip"
                            android:layout_height="80.0dip"
                            android:layout_marginTop="8.0dip"
                            android:background="@drawable/ic_one_ton_on"
                            android:scaleType="fitCenter" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_weight="2.5"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="serif"
                                android:gravity="left"
                                android:padding="5dp"
                                android:text="@string/stuff_details"
                                android:textColor="@color/textblack"
                                android:textSize="12sp"
                                tools:ignore="RtlHardcoded" />


                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="serif"
                                android:gravity="right"
                                android:padding="5dp"
                                android:text="@string/name"
                                android:textColor="@color/textblack"
                                android:textSize="12sp"
                                tools:ignore="RtlHardcoded" />


                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?attr/selectableItemBackground"
                                android:fontFamily="serif"
                                android:gravity="center"
                                android:id="@+id/stuff_type"
                                android:padding="5dp"
                                android:text="@string/lorem_ispum_dollor"
                                android:textColor="@color/textblack"
                                android:textSize="12sp"
                                tools:ignore="RtlHardcoded" />


                        </LinearLayout>

                        <LinearLayout
                            android:visibility="gone"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_height="match_parent">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="serif"
                                android:gravity="right"
                                android:layout_gravity="center"
                                android:padding="5dp"
                                android:text="@string/pikup_time"
                                android:textColor="@color/textblack"
                                android:textSize="12sp"
                                tools:ignore="RtlHardcoded" />


                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?attr/selectableItemBackground"
                                android:fontFamily="serif"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="03.00pm"
                                android:textColor="@color/textblack"
                                android:textSize="12sp"
                                tools:ignore="RtlHardcoded" />


                        </LinearLayout>



                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/paymentviewId"
                    android:layout_width="match_parent"
                    android:background="@color/ColorGray"
                    android:layout_below="@+id/trackdetailsId"
                    android:layout_height="@dimen/_1sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/paymentviewId">


                    <RelativeLayout
                        android:layout_width="0sp"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/_15sdp"
                        android:layout_height="wrap_content">


                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:id="@+id/ivPaymentid"
                            android:background="@drawable/icon_awesome_award"
                            android:layout_height="wrap_content"/>


                        <LinearLayout
                            android:layout_toRightOf="@+id/ivPaymentid"
                            android:orientation="vertical"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_centerInParent="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/ivPaymentid"
                            android:layout_marginLeft="@dimen/_10sdp">


                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="serif"
                                android:gravity="left"
                                android:padding="5dp"
                                android:text="@string/payment_received"
                                android:textColor="@color/textblack"
                                android:textSize="12sp"
                                tools:ignore="RtlHardcoded" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="serif"
                                android:gravity="left"
                                android:padding="5dp"
                                android:id="@+id/status_id"
                                android:text="@string/successfully"
                                android:textColor="@color/textblack"
                                android:textSize="12sp"
                                tools:ignore="RtlHardcoded" />

                        </LinearLayout>



                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="0sp"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/_15sdp"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif"
                            android:gravity="left"
                            android:padding="5dp"
                            android:id="@+id/tvpaymentmodeId"
                            android:text="@string/payment_mode"
                            android:textColor="@color/textblack"
                            android:textSize="12sp"
                            tools:ignore="RtlHardcoded" />


                        <LinearLayout
                            android:layout_below="@+id/tvpaymentmodeId"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_height="wrap_content">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_gravity="center"
                                android:background="@drawable/icon_material_payment"
                                android:layout_height="@dimen/_15sdp"/>


                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="serif"
                                android:gravity="left"
                                android:padding="5dp"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:text="@string/cash"
                                android:textColor="@color/textblack"
                                android:textSize="@dimen/_9sdp"
                                tools:ignore="RtlHardcoded"
                                android:layout_marginLeft="@dimen/_5sdp" />
                        </LinearLayout>






                    </RelativeLayout>


                </LinearLayout>


            </RelativeLayout>
        </ScrollView>


        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/viewpaymentdetailsId"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="@dimen/_45sdp"
            android:visibility="gone"
            android:background="@color/colorwhite">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="serif"
                android:gravity="center"
                android:padding="12dp"
                android:text="@string/view_payment_details"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />

            <View
                android:layout_width="@dimen/_20sdp"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:layout_height="@dimen/_2sdp"/>


        </LinearLayout>





    </RelativeLayout>

</LinearLayout>