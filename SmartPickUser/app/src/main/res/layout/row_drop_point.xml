<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/VView"
  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout android:paddingTop="5.0dip"
        android:paddingBottom="5.0dip" style="@style/LView">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                style="@style/DropDot" />
            <TextView style="@style/DropDot" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dot_mark"
                android:background="@drawable/shape_end_dot"
                android:layout_marginLeft="1.0dip"
                android:layout_marginTop="3.0dip"
                android:layout_marginRight="1.0dip"
                android:layout_marginBottom="3.0dip"
                style="@style/DotMark" />
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/drop_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView style="@style/DropDot" />
                <TextView style="@style/DropDot" />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_weight="1.0"
            android:layout_width="0.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="14.0sp"
                android:textColor="@color/colorTxt"
                android:ellipsize="end"
                android:id="@+id/txt_drop_loc"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:fontFamily="serif"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="9.0sp"
                android:textColor="@color/colorTxt"
                android:ellipsize="end"
                android:layout_below="@+id/txt_drop_loc"
                android:id="@+id/reciver_name"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:fontFamily="serif"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="9.0sp"
                android:textColor="@color/colorTxt"
                android:ellipsize="end"
                android:layout_toEndOf="@+id/reciver_name"
                android:layout_below="@+id/txt_drop_loc"
                android:id="@+id/reciver_number"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:fontFamily="serif"/>
        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="14.0sp"
            android:textColor="@color/colorTxt"
            android:layout_gravity="center_vertical"
            android:id="@+id/txt_drop_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12.0dip"
            android:maxLength="10"
           android:fontFamily="serif"/>
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/img_contact"
            android:padding="10.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/contact"
            android:scaleType="fitXY" />
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/img_remove"
            android:padding="10.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_remove"
            android:scaleType="fitXY" />
    </LinearLayout>
    <View style="@style/LineView" />
</LinearLayout>