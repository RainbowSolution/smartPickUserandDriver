<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_150sdp"
    android:background="@color/colorPrimary"
    android:id="@+id/rlallProfileId"
    android:orientation="horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">



        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:padding="5sp"
            android:src="@drawable/userprofile"
            app:civ_border_color="@color/colorGreen"
            app:civ_border_width="1sp" />


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvUserNameId"
                android:text="@string/user_name"
                android:layout_gravity="center"
                android:textColor="@color/colorwhite"
                android:textSize="14sp"
                android:fontFamily="serif"
                />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/LieditProfileid"
        android:layout_below="@+id/tvUserNameId"
        android:layout_height="wrap_content"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivprofileeditId"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:padding="@dimen/_4sdp"
            app:srcCompat="@drawable/icon_material_edit" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_profile"
            android:textColor="@color/colorwhite"
            android:textSize="12sp"
            android:fontFamily="serif"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
       </LinearLayout>
    </LinearLayout>


</RelativeLayout>
