<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/coloryellow"
    app:cardCornerRadius="12sp"
    app:cardElevation="2sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivlogoutCloseId"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:padding="@dimen/_3sdp"
            android:layout_alignParentRight="true"
            android:src="@drawable/close" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivlogoutImgId"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@+id/ivlogoutCloseId"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logout" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLogoutTagId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivlogoutImgId"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15sp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="@string/logout"
            android:textColor="@color/textblack"
            android:textSize="16dp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvlogoutid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvLogoutTagId"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textColor="@color/textblack"
            android:lineSpacingExtra="5sp"
            android:text="@string/doyouwanttologout"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/rllogoutId"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvlogoutid"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="20sp"
            android:background="@drawable/button_shape_main"
            android:padding="10sp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/logout"
                android:fontFamily="serif"
                android:textColor="@color/colorwhite"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>